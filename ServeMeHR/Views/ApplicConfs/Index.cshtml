@model IEnumerable<ServeMeHR.Models.ApplicConf>

@{
    ViewBag.Title = "Index";
}

<h2>Application Configuration</h2>

@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary list-panel" id="list-panel">
            <div class="panel-heading list-panel-heading">
                <h1 class="panel-title list-panel-title">Application Configuration</h1>
            </div>
            <div class="panel-body">
                <table id="config-data-table"
                       class="table table-striped table-bordered"
                       style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.FileSystemUpload)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ADActive)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.EmailConfirmation)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ModifiedBy)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Modified)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.AppAdmin)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.BackAdmin)
                            </th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FileSystemUpload)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ADActive)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EmailConfirmation)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ModifiedBy)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Modified)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AppAdmin)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BackAdmin)
                                </td>

                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function () {

            $('#config-data-table').DataTable();
        });
    </script>
}