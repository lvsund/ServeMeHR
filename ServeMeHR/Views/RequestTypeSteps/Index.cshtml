@model IEnumerable<ServeMeHR.Models.RequestTypeStep>

@{
    ViewBag.Title = "Index";
}

<h2>Request Type Steps</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm())
{

    <p>
        @Html.DropDownList("SelectedRequestType")
    </p>

    <p>
        <input type="submit" value="Search" />
    </p>

}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary list-panel" id="list-panel">
            <div class="panel-heading list-panel-heading">
                <h1 class="panel-title list-panel-title">Request Type Steps</h1>
            </div>
            <div class="panel-body">
                <table id="requesttypesteps-data-table"
                       class="table table-striped table-bordered"
                       style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.StepDescription)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.StepNumber)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LastUpdated)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Active)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.RequestType1.RequestTypeDescription)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    @Html.DisplayFor(modelItem => item.StepDescription)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StepNumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LastUpdated)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Active)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RequestType1.RequestTypeDescription)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function () {

            $('#requesttypesteps-data-table').DataTable();
        });
    </script>
}